<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LoginDistribuidorActivity">


    <TextView
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Login Distribuidor"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/txtCodigoDistribuidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="75dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"

        android:drawableLeft="@drawable/ic_usuario"
        android:drawablePadding="15dp"
        android:gravity="start"

        android:hint="Código de Distribuidor"

        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/darkgray"
        android:textColorHint="@color/darkgray"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/txtClaveDistribuidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"

        android:drawableLeft="@drawable/ic_clave"
        android:drawableRight="@drawable/ic_vision"
        android:drawablePadding="15dp"
        android:gravity="start"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="10dp"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/darkgray"
        android:textColorHint="@color/darkgray"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Olvidó su contraseña?"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/btnLoginDistribuidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtloginClave"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:layout_marginRight="20dp"
        android:background="@color/colorPrimary"
        android:text="Ingresar"
        android:textColor="@color/darkgray"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnRegistroDistribuidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        android:layout_marginRight="20dp"
        android:background="@color/gray"
        android:text="Registrarse"
        android:textColor="@color/darkgray"
        android:textSize="16dp" />

</LinearLayout>